<!DOCTYPE html>
<html>
<head>
  <title>Simple SFA</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <%= link_to 'Simple SFA', root_path, class: 'navbar-brand' %>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                <li><<strong><%= link_to current_user.email, root_path %></strong></li>
                <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            <% else %>
                <li><%= link_to 'サインアップ', new_user_registration_path %></li>
                <li><%= link_to 'ログイン', new_user_session_path %></li>
            <% end %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

<%= yield %>

    </div>

</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>Simple SFA</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <%= link_to 'Simple SFA', root_path, class: 'navbar-brand' %>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                <li><%= link_to current_user.email, root_path %></li>
                <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            <% else %>
                <li><%= link_to 'サインアップ', new_user_registration_path %></li>
                <li><%= link_to 'ログイン', new_user_session_path %></li>
            <% end %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li class="active"><%= link_to '商談一覧', opportunities_path %></li>
                    <li><a href="#">Reports</a></li>
                    <li><a href="#">Analytics</a></li>
                    <li><a href="#">Export</a></li>
                </ul>
            </div>

            <div class="col-md-10 col-md-offset-2 main">
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>

                <%= yield %>
            </div>

        </div>
    </div>

</body>
</html>
